<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:textColor="@android:color/holo_green_light"
        android:gravity="end"
        android:ellipsize="start"
        android:textSize="44sp"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:textColor="@android:color/holo_green_light"
        android:gravity="end"
        android:ellipsize="end"
        android:textSize="30sp"
        android:singleLine="true"
        />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:orientation="horizontal"
           android:layout_weight="1">
        <TextView
            style="@style/ActionButton"
            android:id="@+id/clear"
            android:text="AC"
            />
           <TextView
               style="@style/ActionButton"
               android:id="@+id/open_bracket"
               android:text="("
               />
           <TextView
               style="@style/ActionButton"
               android:id="@+id/close_bracket"
               android:text=")"
               />
           <TextView
               style="@style/ActionButton"
               android:id="@+id/btn_devided"
               android:text="/"
               />


       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:orientation="horizontal"
           android:layout_weight="1">
           <TextView
               style="@style/NubmerButton"
               android:id="@+id/btn_7"
               android:text="7"
               /><TextView
           style="@style/NubmerButton"
           android:id="@+id/btn_8"
           android:text="8"
           /><TextView
           style="@style/NubmerButton"
           android:id="@+id/btn_9"
           android:text="9"
           /><TextView
           style="@style/ActionButton"
           android:id="@+id/btn_umnoj"
           android:text="*"
           />
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:orientation="horizontal"
           android:layout_weight="1">
           <TextView
               style="@style/NubmerButton"
               android:id="@+id/btn_4"
               android:text="4"
               /><TextView
           style="@style/NubmerButton"
           android:id="@+id/btn_5"
           android:text="5"
           /><TextView
           style="@style/NubmerButton"
           android:id="@+id/btn_6"
           android:text="6"
           /><TextView
           style="@style/ActionButton"
           android:id="@+id/btn_plus"
           android:text="+"
           />
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:orientation="horizontal"
           android:layout_weight="1">
           <TextView
               style="@style/NubmerButton"
               android:id="@+id/btn_1"
               android:text="1"
               /><TextView
           style="@style/NubmerButton"
           android:id="@+id/btn_2"
           android:text="2"
           /><TextView
           style="@style/NubmerButton"
           android:id="@+id/btn_3"
           android:text="3"
           /><TextView
           style="@style/ActionButton"
           android:id="@+id/btn_minus"
           android:text="-"
           />
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:orientation="horizontal"
           android:layout_weight="1">
           <TextView
               style="@style/NubmerButton"
               android:id="@+id/btn_tochka"
               android:text="."
               /><TextView
           style="@style/NubmerButton"
           android:id="@+id/btn_0"
           android:text="0"
           /><TextView
           style="@style/NubmerButton"
           android:id="@+id/btn_back"
           android:text="Back"
           /><TextView
           style="@style/ActionButton"
           android:id="@+id/btn_result"
           android:text="="
           />
       </LinearLayout>
   </LinearLayout>

</LinearLayout>